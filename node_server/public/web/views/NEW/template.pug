html

  head

    title CIRCLES - #{title}
    meta(name='viewport' content='width=device-width, initial-scale=1.0')

    block stylesheets
      link(rel='stylesheet' type='text/css' href='/web/css/styles.css')
      link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700')

    block scripts
      script(src='/web/js/layout.js')
      script(src='/web/js/forms.js')
      script(src='https://kit.fontawesome.com/23ccd10015.js' crossorigin='anonymous')

  body

    // Mixins --------------------------------------------------------------------------------------------------------------------------------------

    // Search bar ---------------------------------------------------------------------------
    mixin searchBar()
      .search-icon
        .icon-container
          i(class='fa-solid fa-magnifying-glass')

      input.search-bar(type='search' name='search-for-circle' placeholder='Search...')

    // Copy link input ---------------------------------------------------------------------
    mixin copyLink(id)
      input.copy-link-input(id=id type='text' name='copy-link' readonly)

      .copy-link-button(onclick='copyText("'+ id +'")')
        .icon-container
          i(class='fa-regular fa-copy')

    
    // Navigation bar ------------------------------------------------------------------------------------------------------------------------------
    include ../includes/NEW/navigation-bar

    // Page content --------------------------------------------------------------------------------------------------------------------------------
    main

        block content